# imports

import matplotlib.pyplot as plt
import numpy as np
from sklearn.model_selection import train_test_split

import random
import tensorflow as tf

import tensorflow as tf
from tensorflow.keras.models import Sequential
from  tensorflow.keras.layers import Dense

from tensorflow.keras.utils import to_categorical
from sklearn.metrics import confusion_matrix, ConfusionMatrixDisplay

plt.figure(figsize=(8, 6))
# Read the text file
x1 = []
y1 = []

x2 = []
y2 = []

x3 = []
y3 = []

with open(r"D:\DL ASSIGNMENTS\ASSIGNMENT_1\DATA\LS_Group09\Class1.txt", 'r') as file:
    for line in file:
        # Split the line into X and Y (assuming space-separated values)
        values = line.strip().split()
        x1.append(float(values[0]))
        y1.append(float(values[1]))



with open(r"D:\DL ASSIGNMENTS\ASSIGNMENT_1\DATA\LS_Group09\Class2.txt", 'r') as file:
    for line in file:
        # Split the line into X and Y (assuming space-separated values)
        values = line.strip().split()
        x2.append(float(values[0]))
        y2.append(float(values[1]))



with open(r"D:\DL ASSIGNMENTS\ASSIGNMENT_1\DATA\LS_Group09\Class3.txt", 'r') as file:
    for line in file:
        # Split the line into X and Y (assuming space-separated values)
        values = line.strip().split()
        x3.append(float(values[0]))
        y3.append(float(values[1]))



plt.scatter(x1, y1, marker='o', linestyle='-', color='r', label='class1')

plt.scatter(x2, y2, marker='o', linestyle='-', color='g', label='class2')

plt.scatter(x3, y3, marker='o', linestyle='-', color='b', label='class3')


# plt.title('Plot of Coordinates full')
# plt.xlabel('X')
# plt.ylabel('Y')
plt.title("linearly separable three clases")
plt.legend()
plt.show()
